@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "UyeKitapGecmis";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<style>
    h2 {
        font-size: 25px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 20px;
    }

    div {
        background-color: lightblue;
        width: 100%;
        height: 75px;
    }
</style>
<h2><b>Üye Adı:</b> @ViewBag.uyead</h2>

<table class="table table-hover ">
    <tr>
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
    </tr>
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.TBLKITAP.AD</td>
                    <td>@x.TBLPERSONEL.PERSONEL</td>
                    <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
                    <td>@Convert.ToDateTime(x.IADETARIH).ToString("dd/MM/yyyy")</td>
                </tr>
            }
</table>