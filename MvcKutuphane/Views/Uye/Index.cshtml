@using MvcKutuphane.Models.Entity
@* Pagedlist yapısı kullanıldığı için aşağıdaki kodlar yazılmıştır *@
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üye Sayfası</h2>
<br />
<table class="table table-striped">
    <tr>
        <th>ÜYE ID</th>
        <th>ÜYE ADI</th>
        <th>ÜYE SOYADI</th>
        <th>OKUL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>KİTAP GEÇMİŞİ</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.ID</td>
            <td>@u.AD</td>
            <td>@u.SOYAD</td>
            <td>@u.OKUL</td>
            <td><a href="/Uye/UyeSil/@u.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Uye/UyeGetir/@u.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Uye/UyeKitapGecmis/@u.ID" class="btn btn-success" style="background-color:lightseagreen">KitapGeçmişi</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Uye/UyeEkle/" class="btn btn-primary">Yeni Üye Ekle</a>