@using MvcKutuphane.Models.Entity
@model List<TBLDUYURULAR>
@{ 
    string renk = " ";
}
@foreach (var x in Model)
{

    if (x.KATEGORI == "Diğer")
    {
        renk = "bg-dark text-white";
    }
    if (x.KATEGORI == "Yeni Kitap")
    {
        renk = "bg-success text-white";
    }
    if (x.KATEGORI == "İletişim")
    {
        renk = "bg-info text-white";
    }
    if (x.KATEGORI == "Kitapları Geciktirmeyin")
    {
        renk = "bg-danger text-white";
    }
    <div class="post">
            <div class="user-block">
                <img class="img-circle img-bordered-sm" src="~/AdminLTE-3.0.4/dist/img/2.png" alt="user image">
                <span class="username">
                    <a href="#" class="@renk">@x.KATEGORI</a>
                    <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                </span>
                <span class="description @renk">@x.TARIH</span>
            </div>
            <!-- /.user-block -->
            <p class="@renk">@x.ICERIK</p>
    </div>
}