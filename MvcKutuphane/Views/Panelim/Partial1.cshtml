@using MvcKutuphane.Models.Entity
@model List<TBLDUYURULAR>
@{ 
    string renk = " ";
}
@foreach (var x in Model)
{

    if (x.KATEGORI == "Diğer")
    {
        renk = "background-color:slategray; color:white";
    }
    if (x.KATEGORI == "Yeni Kitap")
    {
        renk = "background-color:lightcoral; color:darkslategray";
    }
    if (x.KATEGORI == "İletişim")
    {
        renk = "background-color:lightgoldenrodyellow; color:darkslategray";
    }
    if (x.KATEGORI == "Kitapları Geciktirmeyin")
    {
        renk = "background-color:lightblue; color:darkslategray";
    }
    <div class="post">
            <div class="user-block" style="@renk">
                <img class="img-circle img-bordered-sm" src="~/AdminLTE-3.0.4/dist/img/2.png" alt="user image">
                <span class="username">
                    <a href="#" style="@renk">@x.KATEGORI</a>
                    <a href="#" style="@renk" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                </span>
                <span style="@renk" class="description" >@x.TARIH</span>
            </div>
            <!-- /.user-block -->
            <p style="@renk">@x.ICERIK</p>
    </div>
}