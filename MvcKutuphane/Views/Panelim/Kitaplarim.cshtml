@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Kitaplarim";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <h4>Kitap Listem</h4>
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <a class="btn btn-success">
                                                <span class="bg-success">
                                                    @(((DateTime)item.ALISTARIH).ToString("dd-MMM-yyyy"))
                                                </span>
                                            </a>
                                            <--->
                                                    <a class="btn btn-warning">
                                                        <span class="bg-warning">
                                                            @if (item.UYEGETIRTARIH == null)
                                                            {
                                                                <i>Henüz Teslim Edilmedi.</i>
                                                            }
                                                            @if (item.UYEGETIRTARIH != null)
                                                            {
                                                                @(((DateTime)item.UYEGETIRTARIH).ToString("dd-MMM-yyyy"))
                                                            }
                                                        </span>
                                                    </a>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    <b>Kitap Adı: </b>@item.TBLKITAP.AD
                                                </div>
                                                <div class="timeline-body">
                                                    <b>Yazarı: </b>@item.TBLKITAP.YAZAR
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
    </section>
</body>
</html>